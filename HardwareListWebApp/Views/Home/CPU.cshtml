
@{
    ViewData["Title"] = "CPU";
}

<h1>CPU</h1>


<div class="row">
    <div class="form-group col">
        <label for="cpu_vendorSelect">Vendor</label>
        <select class="form-control" id="cpu_vendorSelect">
            <option>Intel</option>
            <option>AMD</option>
        </select>

        <label for="cpu_modelInput">Model</label>
        <input type="text" class="form-control" id="cpu_modelInput" placeholder="i5-9600K" />
    </div>
    <div class="form-group col">
        <label for="cpu_frequencyInput">Your frequency after overclocking, in GHz</label>
        <input type="number" step="0.001" class="form-control" id="cpu_frequencyInput" placeholder="4.987" />

        <label for="cpu_voltageInput">Core voltage</label>
        <input type="number" step="0.001" class="form-control" id="cpu_voltageInput" placeholder="1.405" />
    </div>
    <div class="form-group col">
        <label for="cpu_cinesingleInput">Cinebench Single Core score</label>
        <input type="number" class="form-control" id="cpu_cinesingleInput" placeholder="14000" />

        <label for="cpu_cinemultiInput">Cinebench Multi Core score</label>
        <input type="number" class="form-control" id="cpu_cinemultiInput" placeholder="21500" />
    </div>
</div>
<button type="button" class="btn btn-primary" id="cpu_addBtn">Add</button>
<script src="~/js/addPartForm.js" asp-append-version="true"></script>

<div class="container" id="cpu_container">
    <div class="row bg-light">
        <div class="col-sm">
            Vendor
        </div>
        <div class="col-sm">
            Model
        </div>
        <div class="col-sm">
            Frequency
        </div>
        <div class="col-sm">
            Voltage
        </div>
        <div class="col-sm">
            CR15 Singlecore
        </div>
        <div class="col-sm">
            CR15 Multicore
        </div>
        <div class="col-sm">
            @*Empty column for remove button*@
        </div>
    </div>
    <div class="row d-none">
        <div class="col-sm" data-column-type="vendor">
            
        </div>
        <div class="col-sm" data-column-type="model">
            
        </div>
        <div class="col-sm" data-column-type="frequency">
            
        </div>
        <div class="col-sm" data-column-type="voltage">
            
        </div>
        <div class="col-sm" data-column-type="cinesingle">
            
        </div>
        <div class="col-sm" data-column-type="cinemulti">
            
        </div>
        <div class="col-sm" data-column-type="">
            <a href="#">Remove</a>
        </div>
    </div>
</div> 
<script src="~/js/partList.js" asp-append-version="true"></script>
<script src="~/js/partController.js" asp-append-version="true"></script>